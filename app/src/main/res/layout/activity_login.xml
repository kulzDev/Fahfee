<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Activities.Registration_Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="@string/login"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:fontFamily="@font/belleza" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/emo"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/layout_style"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:fontFamily="@font/belleza"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textColor="#5b5b5b"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputPin"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:fontFamily="@font/belleza"
                android:hint="Pin"
                android:inputType="numberPassword"
                android:textColor="#5b5b5b"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="155dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/login_btn_style"
                android:fontFamily="@font/belleza"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/register_btn_style"
                android:fontFamily="@font/belleza"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/forgotPinBtn"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/cancel_btn_style"
                android:fontFamily="@font/belleza"
                android:text="Forgot Pin"
                android:textAllCaps="false"
                android:textColor="#ff0303"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>