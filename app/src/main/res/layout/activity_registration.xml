<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="5dp"
    tools:context=".Activities.Registration_Login.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/registrationPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/belleza"
            android:paddingTop="30dp"
            android:text="Registration"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/registration_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/layout_style"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:id="@+id/personal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belleza"
                android:text="PERSONAL INFORMATION"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/inputFirstName"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:hint="First Name"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />


            <EditText
                android:id="@+id/inputSurname"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:hint="Surname"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputId"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/id_verified_24px"
                android:hint="RSA ID Number"
                android:inputType="number"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txt_createPin"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:fontFamily="@font/belleza"
                android:text="CREATE PIN"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_createPin"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_createPin"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Enter 5 Digit PIN"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/input_confirmPin"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Confirm PIN"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">


            <Button
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_btn_style"
                android:fontFamily="@font/belleza"
                android:text="Register"
                android:textAllCaps="false"
                android:textSize="19sp" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/cancel_btn_style"
                android:fontFamily="@font/belleza"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#ff0303"
                android:textSize="19sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>