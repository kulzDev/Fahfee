<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/registrationPage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="Registration"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/registration_relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/registration_relativeLayout"
        android:layout_width="340dp"
        android:layout_height="470dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="217dp"
        android:background="@drawable/layout_style"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/personal_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PERSONAL INFORMATION"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/inputFirstName"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="First Name"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />


        <EditText
            android:id="@+id/inputSurname"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:hint="Surname"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/inputId"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/id_verified_24px"
            android:hint="RSA ID Number"
            android:inputType="number"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txt_createPin"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="305dp"
            android:text="CREATE PIN"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_createPin"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_createPin"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Enter 5 Digit PIN"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/input_confirmPin"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="380dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Confirm PIN"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="122dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_relativeLayout"
        app:layout_constraintVertical_bias="0.593">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cancel_btn_style"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#ff0303"
            android:textSize="19sp" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_btn_style"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="19sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>