<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Activities.Registration_Login.PinRetrievalPageActivity">

    <TextView
        android:id="@+id/forgotPin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="FORGOT PIN"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/emo"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />


    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/layout_style"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="#5b5b5b"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/txtPin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtPhone"
            android:layout_gravity="center"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/id_verified_24px"
            android:hint="Pin"
            android:textColor="#5b5b5b"
            android:textColorHint="#5b5b5b"
            android:textSize="19sp" />

        <Button
            android:id="@+id/send_pin_Btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn_style"
            android:text="Send Pin"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:id="@+id/registerBtn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/register_btn_style"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="19sp" />
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/cancel_btn_style"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#ff0303"
            android:textSize="19sp" />


    </LinearLayout>


</LinearLayout>