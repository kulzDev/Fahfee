<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".EditProfilePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/editProfile_relativeLayout">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp">
                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_backspace_black_24dp"
                    android:padding="3dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/belleza" />
            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editProfile_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/layout_style"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/personal_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="PERSONAL INFORMATION"
                android:textColor="#ffffff"
                android:textSize="19sp" />


            <EditText
                android:id="@+id/inputFirstName"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:hint="First Name"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />


            <EditText
                android:id="@+id/inputSurname"
                android:layout_width="304dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:hint="Surname"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputId"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/id_verified_24px"
                android:hint="RSA ID Number"
                android:inputType="number"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_below="@+id/inputId"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txt_createPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="ADDITIONAL INFORMATION"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_address"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_below="@+id/txt_createPin"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:hint="Residential Address"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/input_city"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:hint="City"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/input_confirmPin"
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/txt_createPin"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:hint="Enter 5 Digit PIN"
                android:textColorHint="#5b5b5b"
                android:textSize="19sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/register_btn_style"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="19sp" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/cancel_btn_style"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#ff0303"
                android:textSize="19sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>