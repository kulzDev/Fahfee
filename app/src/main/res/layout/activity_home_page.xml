<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="100dp"
                android:src="@drawable/emo"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/register_btn_style"
                android:fontFamily="@font/belleza"
                android:padding="10dp"
                android:paddingBottom="25dp"
                android:text="@string/play_now"
                android:textSize="30sp" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:padding="5dp">

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/profile"
                android:text="Profile"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>

            <Button
                android:id="@+id/numbers_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/numbers"
                android:text="Numbers"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>

            <Button
                android:id="@+id/draw_times_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/time"
                android:text="Draw times"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>


            <!--next line-->


            <Button
                android:id="@+id/wallet_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/wallet"
                android:text="Wallet"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>

            <Button
                android:id="@+id/how_to_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/how"
                android:text="How to"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>

            <Button
                android:id="@+id/contact_btn"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/contact"
                android:text="Contact"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:fontFamily="@font/belleza"/>

        </GridLayout>
    </LinearLayout>
</RelativeLayout>


